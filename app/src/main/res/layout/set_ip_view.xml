<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content" android:text="服务器ip地址"
            android:textSize="@dimen/title_size" android:textColor="@color/black" android:alpha="0.57"
            android:layout_marginLeft="@dimen/item_icon_left" android:layout_marginRight="@dimen/item_icon_left"
            android:layout_marginTop="@dimen/item_icon_left"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/ip1" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_icon_left" android:layout_marginRight="@dimen/item_icon_left"
            android:textSize="@dimen/text_size" android:textColor="@color/black"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent" android:layout_height="wrap_content" android:text="加密接口地址"
            android:textSize="@dimen/title_size" android:textColor="@color/black" android:alpha="0.57"
            android:layout_marginLeft="@dimen/item_icon_left" android:layout_marginRight="@dimen/item_icon_left"
            android:layout_marginTop="@dimen/item_icon_left"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/ip2" android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/item_icon_left" android:layout_marginRight="@dimen/item_icon_left"
            android:textSize="@dimen/text_size" android:textColor="@color/black"/>
    </LinearLayout>
</LinearLayout>
